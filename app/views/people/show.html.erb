<% end %>

<% content_for :right_panel do %>
  &nbsp;
<% end %>


<div class="row">
  <div class="span6">
    <% if @person.id != current_person.id %>
      <% if wingmanship = current_person.received_wingmanship_requests.where(:person_id => @person.id).first %>
        <%= link_to "Accept Wingmanship", accept_wingmanship_path(wingmanship), :class => "btn btn-small btn-red btn-primary pull-right" %>
      <% elsif wingmanship = current_person.inverse_wingmanships.where(:person_id => @person.id).first %>
        <%= link_to " Stop being Wingman", wingmanship, :method => :delete, :class => "btn btn-small btn-red btn-warning pull-right" %>
      <% end %>
      <span class="pull-right">&nbsp;</span>
      <% if current_person.all_wingmans.exists?(@person.id) %>
        <% wingmanship = Wingmanship.where(:person_id => current_person.id, :wingman_id => @person.id).first %>
        <% if wingmanship.approved? %>
          <%= link_to "Stop Getting Help", wingmanship, :method => :delete, :class => "btn btn-small btn-red pull-right btn-warning" %>
        <% else %>
          <%= link_to "Cancel Wingmanship Request", wingmanship, :method => :delete, :class => "btn btn-small btn-red pull-right btn-warning" %>
        <% end %>
      <% else %>
        <%= link_to "Ask to be Wingman", wingmanships_path(:wingman_id => @person), :method => :post, :class => "btn btn-small btn-primary pull-right", :title => "Get help in specific areas" %>
      <% end %>
      <!-- Keeping it simple, User can not ask to become a wingman he should receive a request -->
      <!--
      <span class="pull-right">&nbsp;</span>
      <%= link_to "Become Wingman", "#", :class => "btn pull-right", :title => "Help them in your area of expertise" %>
      -->
    <% else %>
      <i class="pull-right">You</i>
    <% end %>
    <h3><%= @person.name %></h3>
    <hr />
    <%= render @person %>
  </div>
</div>

<% @nav_id = "nav-show-person" %>
